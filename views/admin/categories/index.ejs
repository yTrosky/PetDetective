<%- include ('../../partials/header.ejs') %>
    <%- include ('../../partials/navbar.ejs') %>
        <div class="title">
            <h2>Categorias</h2>
        </div>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Título</th>
                    <th>Slug</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% categories.forEach(category=> { %>
                    <tr>
                        <th>
                            <%= category.id %>
                        </th>
                        <th>
                            <%= category.title %>
                        </th>
                        <th>
                            <%= category.slug %>
                        </th>
                        <th>
                            <a href="/admin/categories/edit/<%= category.id %>" class="btn btn-warning">Editar</a>

                            <form method="POST" action="/categories/delete" style="display: inline;"
                                onsubmit="confirmarDelecao(event, this)">
                                <input type="hidden" name="id" value="<%= category.id %>">
                                <button class="btn btn-danger">Deletar</button>
                            </form>

                        </th>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
        <div class="button-mid">
            <a class="btn-criar" href="/admin/categories/new">Criar nova categoria</a>
        </div>
        </div>
        <%- include ('../../partials/footer.ejs') %>
            <script>
                function confirmarDelecao(event, form) {
                    event.preventDefault();
                    var decision = confirm("Você quer deletar esta categoria?");
                    if (decision) {
                        form.submit();
                    }
                }
            </script>